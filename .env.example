# Example environment for local development
# Copy to `.env` or `.env.local` and fill values

# Runtime
NODE_ENV=development
LOG_LEVEL=info

# Database (required)
# Postgres connection string, e.g.:
# postgres://user:password@localhost:5432/sam_bot_db
DATABASE_URL=your-database-url-here

# Optional: If your app reads discrete fields
DATABASE_NAME=
DATABASE_USER=
DATABASE_PASSWORD=

# Discord bot config (only needed for running the bot, not debug scripts)
BOT_TOKEN=your-bot-token-here
CLIENT_ID=your-client-id-here
GUILD_ID=your-guild-id-here

# AO3 credentials (only needed if the parser authenticates; safe to omit for public works)
AO3_USERNAME=your-ao3-username
AO3_PASSWORD=your-ao3-password
AO3_HEADLESS=true

# Command Prefix (optional)
COMMAND_PREFIX=!

